{% extends 'base.html.twig' %}

{% block title %}Создание книги{% endblock %}

{% block body %}
    <h1 class="page-title">Создание книги</h1>
    {{ form_start(form, {'attr': {'class': 'form_box'}}) }}
        <div class="form_content">
            {{ form_row(form.title, {'label': 'Заголовок'}) }}
            {{ form_row(form.author, {'label': 'Автор'}) }}
            {{ form_row(form.description, {'label': 'Описание'}) }}
            {{ form_row(form._token) }}
            <button type="submit" class="btn btn-primary">Добавить</button>
        </div>
    {{ form_end(form) }}
{% endblock %}
{% block extra_stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/book/create.css') }}" />
{% endblock %}